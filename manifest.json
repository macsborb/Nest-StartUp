{
  "manifest_version": 3,
  "name": "Email Analyzer",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://mail.google.com/*"],
  "background": {
    "service_worker": "./js/background.js"
  },
  "action": {
    "default_popup": "./pages/popup.html",
    "default_icon": "./public/logo.png"
  }
}
